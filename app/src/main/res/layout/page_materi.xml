<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_materi"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bg"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/normal_100"
            android:layout_marginEnd="@dimen/normal_100">

            <ImageButton
                android:id="@+id/btn_close_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_close_24"
                android:background="@android:color/transparent"
                android:layout_marginStart="@dimen/normal_100"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/text_view_title_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_bar_materi"
                android:textColor="@color/white"
                android:textSize="@dimen/body_1"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/normal_100"/>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/normal_100"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="9"
        app:layout_constraintTop_toBottomOf="@+id/appbar_materi"
        app:layout_constraintStart_toStartOf="@id/appbar_materi"
        app:layout_constraintBottom_toBottomOf="parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:padding="15dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/bab_1"
                app:cardBackgroundColor="#E0F8F6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="@dimen/normal_100"
                android:layout_marginLeft="@dimen/normal_100"
                android:layout_marginRight="@dimen/normal_100"
                app:cardElevation="@dimen/small_100"
                app:cardCornerRadius="@dimen/small_100">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="@dimen/normal_100"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_baseline_menu_book_materi_24"/>

                    <TextView
                        android:id="@+id/title_bab_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sejarah Aksara Lontara"
                        android:textSize="@dimen/subtitle_1"
                        android:textColor="#045752"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_text"
                        tools:text="5 Bagian"
                        android:textSize="@dimen/overline"
                        android:textColor="#045752"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/bab_2"
                app:cardBackgroundColor="#E0F8F6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="@dimen/normal_100"
                android:layout_marginLeft="@dimen/normal_100"
                android:layout_marginRight="@dimen/normal_100"
                app:cardElevation="@dimen/small_100"
                app:cardCornerRadius="@dimen/small_100">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="@dimen/normal_100"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_baseline_menu_book_materi_24"/>

                    <TextView
                        android:id="@+id/title_bab_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fonem"
                        android:textSize="@dimen/subtitle_1"
                        android:textColor="#045752"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/iv_part_material"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_text"
                        tools:text="5 Bagian"
                        android:textSize="@dimen/overline"
                        android:textColor="#045752"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/bab_3"
                app:cardBackgroundColor="#E0F8F6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="@dimen/normal_100"
                android:layout_marginLeft="@dimen/normal_100"
                android:layout_marginRight="@dimen/normal_100"
                app:cardElevation="@dimen/small_100"
                app:cardCornerRadius="@dimen/small_100">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="@dimen/normal_100"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_baseline_menu_book_materi_24"/>

                    <TextView
                        android:id="@+id/title_bab_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kalimat Dasar"
                        android:textSize="@dimen/subtitle_1"
                        android:textColor="#045752"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_text"
                        tools:text="3 Bagian"
                        android:textSize="@dimen/overline"
                        android:textColor="#045752"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/bab_4"
                app:cardBackgroundColor="#E0F8F6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="@dimen/normal_100"
                android:layout_marginLeft="@dimen/normal_100"
                android:layout_marginRight="@dimen/normal_100"
                app:cardElevation="@dimen/small_100"
                app:cardCornerRadius="@dimen/small_100">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="@dimen/normal_100"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_baseline_menu_book_materi_24"/>

                    <TextView
                        android:id="@+id/title_bab_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mantra"
                        android:textSize="@dimen/subtitle_1"
                        android:textColor="#045752"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_text"
                        tools:text="3 Bagian"
                        android:textSize="@dimen/overline"
                        android:textColor="#045752"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/bab_5"
                app:cardBackgroundColor="#E0F8F6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="@dimen/normal_100"
                android:layout_marginLeft="@dimen/normal_100"
                android:layout_marginRight="@dimen/normal_100"
                app:cardElevation="@dimen/small_100"
                app:cardCornerRadius="@dimen/small_100">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="@dimen/normal_100"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_baseline_menu_book_materi_24"/>

                    <TextView
                        android:id="@+id/title_bab_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mantra"
                        android:textSize="@dimen/subtitle_1"
                        android:textStyle="bold"
                        android:textColor="#045752"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kata Ganti"
                        tools:text="3 Bagian"
                        android:textSize="@dimen/overline"
                        android:textColor="#045752"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/bab_6"
                app:cardBackgroundColor="#E0F8F6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="@dimen/normal_100"
                android:layout_marginLeft="@dimen/normal_100"
                android:layout_marginRight="@dimen/normal_100"
                app:cardElevation="@dimen/small_100"
                app:cardCornerRadius="@dimen/small_100">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="@dimen/normal_100"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_baseline_menu_book_materi_24"/>

                    <TextView
                        android:id="@+id/title_bab_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Imbuhan"
                        android:textSize="@dimen/subtitle_1"
                        android:textStyle="bold"
                        android:textColor="#045752"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kata Ganti"
                        tools:text="3 Bagian"
                        android:textSize="@dimen/overline"
                        android:textColor="#045752"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>



        </GridLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>