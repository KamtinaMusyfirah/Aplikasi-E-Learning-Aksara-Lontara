<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.question.QuestionActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_question"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btn_close_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_baseline_close_24"
                android:background="@android:color/transparent"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ProgressBar
        android:id="@+id/pb_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:progress="20"
        android:progressTint="@color/colorPrimaryDark"
        android:progressBackgroundTint="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/appbar_question"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_question"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pb_question"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="56dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_question" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_prev_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/white"
        android:backgroundTint="@color/colorPrimaryDark"
        android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>

    <TextView
        android:id="@+id/tv_index_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_text"
        tools:text="0 / 0"
        android:textColor="@color/white"
        android:background="@drawable/bg_index"
        android:paddingStart="@dimen/normal_100"
        android:paddingEnd="@dimen/normal_100"
        android:paddingTop="@dimen/small_100"
        android:paddingBottom="@dimen/small_100"
        app:layout_constraintTop_toTopOf="@id/btn_prev_question"
        app:layout_constraintBottom_toBottomOf="@id/btn_next_question"
        app:layout_constraintStart_toEndOf="@id/btn_prev_question"
        app:layout_constraintEnd_toStartOf="@id/btn_next_question"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_next_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/white"
        android:backgroundTint="@color/colorPrimaryDark"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>