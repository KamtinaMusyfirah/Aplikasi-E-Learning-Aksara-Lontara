<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_not_found_match"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_marginHorizontal="20dp"
    app:cardBackgroundColor="@color/bg_muda">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_maaf"
            android:text="MAAF"
            android:textColor="@color/bg"
            android:textSize="@dimen/h6"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_100"
            android:fontFamily="@font/poppins_medium"
            android:letterSpacing="0.1"
            android:lineSpacingExtra="@dimen/small_100"
            android:text="Kata yang anda cari tidak ditemukan \n Silahkan cari kata lain \n atau periksa dengan baik kata yang anda masukkan"
            android:textAlignment="center"
            android:textColor="@color/bg"
            android:textSize="@dimen/subtitle_1"
            app:layout_constraintBottom_toTopOf="@id/btn_oke"
            app:layout_constraintTop_toBottomOf="@id/text_view_maaf" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_oke"
            android:text="Oke"
            android:textSize="@dimen/subtitle_1"
            app:cornerRadius = "12dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:backgroundTint="@color/bg"
            android:textColor="@color/bg_muda"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_message"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>