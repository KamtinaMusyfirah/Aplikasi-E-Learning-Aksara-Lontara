<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/top_question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/question_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 / 5"
            android:textStyle="bold"
            android:textSize="@dimen/subtitle_1"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="@color/bg_muda"/>

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_margin="@dimen/normal_100"
            android:textColor="@color/bg_muda"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/h6"
            android:text="ᨈᨕᨘ ᨅᨘᨂᨛ ᨅᨘᨂᨛ ᨆᨄᨕᨗᨔᨛᨂᨙᨂᨛ ᨖᨘᨑᨘᨄᨘ ᨒᨚᨈᨑᨕᨙ ᨕᨗᨐᨊᨑᨗᨈᨘ᨞"/>
    </LinearLayout>

    <TextView
        android:id="@+id/countdown"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="@dimen/small_100"
        android:layout_marginBottom="4dp"
        android:text="30"
        android:textColor="@color/bg"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/unselected_btn"
        android:backgroundTint="#E0F8F6"
        app:layout_constraintBottom_toTopOf="@+id/option_question"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/option_question"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/normal_100"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="@dimen/normal_100"
        android:layout_marginBottom="@dimen/normal_100"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_question">

        <Button
            android:id="@+id/optionA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/unselected_btn"
            app:backgroundTint="#045752"
            android:layout_marginBottom="24dp"
            android:padding="@dimen/normal_100"
            android:elevation="3dp"
            android:textColor="@color/bg_muda"
            android:textSize="@dimen/h6"
            android:textStyle="bold"
            android:text="ᨀᨑᨕᨙ ᨈᨘᨆᨄᨑᨗᨔᨗ ᨀᨒᨚᨊ"/>

        <Button
            android:id="@+id/optionB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/unselected_btn"
            app:backgroundTint="#045752"
            android:layout_marginBottom="24dp"
            android:padding="@dimen/normal_100"
            android:elevation="3dp"
            android:textColor="@color/bg_muda"
            android:textSize="@dimen/h6"
            android:textStyle="bold"
            android:text="ᨉᨕᨙ ᨄᨆᨈᨙ"/>

        <Button
            android:id="@+id/optionC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/unselected_btn"
            app:backgroundTint="#045752"
            android:layout_marginBottom="24dp"
            android:padding="@dimen/normal_100"
            android:elevation="3dp"
            android:textColor="@color/bg_muda"
            android:textSize="@dimen/h6"
            android:textStyle="bold"
            android:text="ᨉᨕᨙ ᨆᨈᨑᨙ"/>

        <Button
            android:id="@+id/optionD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/unselected_btn"
            app:backgroundTint="#045752"
            android:layout_marginBottom="24dp"
            android:padding="@dimen/normal_100"
            android:elevation="3dp"
            android:textColor="@color/bg_muda"
            android:textSize="@dimen/h6"
            android:textStyle="bold"
            android:text="ᨀᨑᨕᨙ ᨆᨂᨘᨈᨘᨂᨗ "/>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_prev_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/white"
        android:backgroundTint="@color/bg"
        android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
        android:layout_margin="@dimen/normal_100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_next_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/white"
        android:backgroundTint="@color/bg"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:layout_margin="@dimen/normal_100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>